{
	"name": "news-portal-monorepo",
	"private": true,
	"workspaces": [
		"backend",
		"frontend"
	],
	"scripts": {
		"dev": "concurrently -n BE,FE -c blue,green \"npm:dev -w backend\" \"npm:dev -w frontend\"",
		"lint": "npm run lint -w frontend",
		"typecheck": "npm run typecheck -w frontend",
		"build": "npm run build -w backend && npm run build -w frontend",
		"start": "pm2 start ./backend/dist/server/index.js --no-daemon"
	},
	"devDependencies": {
		"concurrently": "^9.0.0"
	}
}