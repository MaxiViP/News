{
	"compilerOptions": {
		"target": "ES2020", // стабильный таргет для Node 20/22
		"module": "CommonJS", // компиляция в CommonJS
		"moduleResolution": "node", // обычное разрешение модулей
		"outDir": "dist", // куда кладём сборку
		"rootDir": "src", // исходники
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": ["src"]
}
